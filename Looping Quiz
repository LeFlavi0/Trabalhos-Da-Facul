                Console.WriteLine("Wrong Answers:" + numErros);


                //Tentando fazer o jogo loopavel
                Console.Write("Press <1> to try again or <2> to quit");
                resposta = Convert.ToInt32(Console.ReadLine());
                if (resposta == 2)
                {
                   loop = false;
                }
                else if (resposta == 1)
                {
                    loop = true;
                };
                //aqui decide se o loop continua ou não
